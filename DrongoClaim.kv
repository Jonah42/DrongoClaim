#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import rgba kivy.utils.get_color_from_hex
<MyScreenManager>:
    transition: FadeTransition()
    current: 'welcome-screen' if self.data['zid'] == '' else 'claim-screen'
    WelcomeScreen:
    ClaimScreen:

<WelcomeScreen>:
    name: 'welcome-screen'
    BoxLayout:
        canvas:
            Color:
                rgb: 0xd9 / 255.0, 0xd9 / 255.0, 0xd9 / 255.0
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        padding: [20,0,20,150]
        DrongoLabel:
            size: self.texture_size
            size_hint: (None, 0.2)
            text: 'DrongoClaim'
            font_size: 36
        BoxLayout:
            pos_hint: {'center_x': 0.5}
            size_hint: (0.7, 0.5)
            canvas:
                Color:
                    rgb: 0xff / 255.0, 0xff / 255.0, 0xff / 255.0
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            padding: 15
            spacing: 10
            orientation: 'vertical'
            DrongoLabel:
                text: 'Seems I don\'t know you yet...'
                size: self.texture_size
                size_hint: (None, 0.2)
                font_size: 24
            InputWrapper:
                DrongoInput:
                    id: zid
                    hint_text: 'zID'
                    halign: 'center'
                    font_size: '24'
            InputWrapper:
                DrongoInput:
                    id: firstName
                    hint_text: 'First name'
                    halign: 'center'
                    font_size: '24'
            InputWrapper:
                DrongoInput:
                    id: lastName
                    hint_text: 'Last name'
                    halign: 'center'
                    font_size: '24'
            DrongoButton:
                width: 100
                size_hint: (None, 0.2)
                pos_hint: {'center_x': 0.5}
                text: 'Save'
                font_size: 30
                on_release: app.root.saveDetails(zid.text, firstName.text, lastName.text)

<ClaimScreen>:
    id: claimScreen
    name: 'claim-screen'
    BoxLayout:
        canvas:
            Color:
                rgb: 0xd9 / 255.0, 0xd9 / 255.0, 0xd9 / 255.0
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'horizontal'
        spacing: 10
        padding: 10
        ScrollView:
            # anchor_x: 'center'
            # anchor_y: 'top'
            size_hint: (0.8, 1)
            do_scroll_x: False
            smooth_scroll_end: 10
            effect_cls: 'ScrollEffect'
            # canvas:
            #     Color:
            #         rgb: 0xff / 255.0, 0xff / 255.0, 0x00 / 255.0
            #     RoundedRectangle:
            #         size: self.size
            #         pos: self.pos
            #         radius: [10]
            BoxLayout:
                orientation: 'vertical'
                padding: [20,0,0,0]
                height: self.minimum_height
                size_hint: (1, None)
                # canvas:
                #     Color:
                #         rgb: 0x00 / 255.0, 0xff / 255.0, 0xff / 255.0
                #     RoundedRectangle:
                #         size: self.size
                #         pos: self.pos
                #         radius: [10]
                BoxLayout:
                    orientation: 'horizontal'
                    padding: [0,0,0,10]
                    # height: 100
                    height: self.minimum_height
                    size_hint: (1, None)
                    pos_hint: {'top': 0}
                    # canvas:
                    #     Color:
                    #         rgb: 0xff / 255.0, 0x00 / 255.0, 0xff / 255.0
                    #     RoundedRectangle:
                    #         size: self.size
                    #         pos: self.pos
                    #         radius: [10]
                    DrongoLabel:
                        size: self.texture_size
                        size_hint: (None, None)
                        text: 'DrongoClaim'
                        font_size: 36
                    DrongoInput:
                        height: 40
                        size_hint: (None, None)
                        text: root.manager.data['firstName']
                        halign: 'right'
                        font_size: 20
                    DrongoInput:
                        height: 40
                        size_hint: (None, None)
                        text: root.manager.data['lastName']
                        halign: 'left'
                        font_size: 20
                    DrongoInput:
                        height: 40
                        size_hint: (None, None)
                        text: root.manager.data['zid']
                        halign: 'right'
                        font_size: 20
                SubjectList:
                    id: subjectList
                    orientation: 'vertical'
                    height: self.minimum_height
                    size_hint: (1, None)
                    spacing: 10
                    on_kv_post: subjectList.loadData(root.manager.data)
                    DrongoButton:
                        # width: 150
                        height: self.texture_size[1]
                        # size: self.texture_size
                        size_hint: (1, None)
                        text: '+'
                        font_size: 40
                        on_release: subjectList.addSubject()
        AnchorLayout:
            size_hint: (0.2, 1)
            anchor_y: 'center'
            anchor_x: 'center'
            BoxLayout:
                orientation: 'vertical'
                height: self.minimum_height
                size_hint: (1, None)
                spacing: 10
                DrongoButton:
                    # width: 150
                    height: 70
                    # size: self.texture_size
                    size_hint: (1, None)
                    # pos_hint: {'center_y': 0.5}
                    text: 'Save'
                    font_size: 30
                    on_release: app.root.saveData(subjectList)
                DrongoButton:
                    # width: 150
                    height: 70
                    # size: self.texture_size
                    size_hint: (1, None)
                    # pos_hint: {'center_y': 0.5}
                    text: 'Submit'
                    font_size: 30
                    on_release: app.root.submitClaims(subjectList)
                    on_kv_post: self.load_colours(self.submit_normal, self.submit_pressed)
                    canvas.before:
                        Color:
                            rgb: self.button_color
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [10]

